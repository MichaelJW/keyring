#! /bin/bash

echo $OSTYPE

if [[ "$OSTYPE" == "darwin"* ]]; then
    echo "PKG_LIBS=-framework Security" > src/Makevars
elif [[ "$OSTYPE" == "linux"* ]]; then
    echo "PKG_CFLAGS=-I/usr/include/dbus-1.0 -I/usr/lib/x86_64-linux-gnu/dbus-1.0/include" > src/Makevars
    echo "PKG_LIBS=-ldbus-1" >> src/Makevars
fi
